<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="74dp" android:id="@+id/textDescription"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/camera_view"/>
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:scrollbars="horizontal"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <Button
                    android:text="Texto"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" android:id="@+id/readText"
                    android:layout_margin="8dp"
            />

            <Button
                    android:text="Faces"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" android:id="@+id/detectFace"
                    android:layout_margin="8dp"
            />

            <Button
                    android:text="Classificar"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" android:id="@+id/labelImage"
                    android:layout_margin="8dp"
            />

        </LinearLayout>
    </HorizontalScrollView>
    <io.fotoapparat.view.CameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="561dp" app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>